<%= @visit_day %>
<% if @balances.present? %>
  <% @balances.each do |balance| %>
  <p><%= balance.id %></p>
  <p><%= balance.category.name %></p>
  <% end %>
<% end %>
<%= form_with model: @balance, local: true do |f| %>
  <%= f.hidden_field :day, value: @id %>
  <div class="balance-detail">費目     
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}) %>
  </div>
  <div>詳細
    <%= f.text_field :detail %>
  </div>
  <div>金額
    <%= f.text_field :money_amount%>
  </div>
    <%= f.submit "追加" %>
<% end %>

    