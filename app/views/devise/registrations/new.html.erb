<div class="contents">
 <h2>Sign up</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="form-content">
  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, class: "text-field" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(6文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "text-field" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "submit" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
